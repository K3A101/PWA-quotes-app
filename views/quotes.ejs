<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs");%>

    <body>

        <header>
            <!-- De navigatie menu -->
            <%- include("./partials/nav.ejs");%>
        </header>

      <%-include("./partials/page-title.ejs")%>
        <!-- De tags menu en de searchbar -->
        <%- include("./partials/filter.ejs") %>

            <main>
                <section id="content">
                    <% quoteData.forEach((item)=> { %>
                        <article>
                        <section>
                            <q><%-item.quote%></q>

                            <p class="author"><%-item.author%></p>
                        </section>
                        <section>
                            <img src="<%-item.avatar%>" alt="Avatar">
                            <p><%-item.bio%></p>
                        </section>
                        <ul>
                            <a href="/quotes/<%-item.id%>">Quote<%-item.id%></a>
                            <li><%-item.tags%></li>
                        </ul>
                    </article> 
                    <%})%>
                   
                </section>
            </main>

            <%-include('./partials/script-tag')  %>
    </body>

</html>